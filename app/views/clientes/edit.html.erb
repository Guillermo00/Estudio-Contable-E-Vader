<h1>Editar Cliente</h1>
<div id="bot">
<%= link_to 'Mostrar', @cliente %> | <%= link_to 'Volver', clientes_path %>	
</div>

<fieldset class="nuevo">
<%= render 'form' %>

          <h2>Medios Adicionales</h2>
              <% @cliente.medios.each do |medio| %>
		    <p>
		      <strong>Nombre:</strong>
		      <%= medio.nombre %>
		    </p>
		   
		    <p>
		      <strong>Contacto:</strong>
		      <%= medio.contacto %>
		    </p> 
			
			<%= link_to 'Eliminar', [medio.cliente, medio],
               method: :delete,
               data: { confirm: 'Â¿Esta seguro?' } %>
		    <br>
		  <% end %>
         
          <%= form_for([@cliente, @cliente.medios.build]) do |f| %>
         
            <%= f.label :Medio %>
            <%= f.text_field :nombre %>
         
                    <%= f.label :contacto %>
            <%= f.text_field :contacto %>
          
          <p>
            <%= f.submit "Agregar Medio" %>
          </p>
        <% end %>

</fieldset>


